<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".appsignup">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/image"
        android:orientation="vertical">
    </LinearLayout>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/name" />

    <EditText
        android:layout_width="9000dp"
        android:layout_height="65dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="80dp"
        android:id="@+id/firstname"
        android:inputType="textPersonName"
        android:hint="Jake" />


    <ImageView
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/last_name" />

    <EditText
        android:layout_width="800dp"
        android:layout_height="65dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="145dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:hint="Smith"
        android:id="@+id/lastname"
        android:inputType="textPersonName"
        android:src="@drawable/smith" />


    <ImageView
        android:layout_width="80dp"
        android:layout_height="65dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="185dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/york_email" />
    <EditText
        android:layout_width="800dp"
        android:layout_height="65dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="215dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:id="@+id/emailaddress"
        android:hint="jacksmith@my.yorku.ca"
        android:inputType="textEmailAddress"
        android:src="@drawable/jack_smith_my_yorku_ca" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="65dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/york_email_verify" />

    <EditText
        android:layout_width="800dp"
        android:layout_height="65dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="285dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:hint="jacksmith@my.yorku.ca"
        android:id="@+id/confirmemailaddress"
        android:inputType="textEmailAddress"
        android:src="@drawable/jack_smith_my_yorku_ca" />
    <ImageView
        android:layout_width="800dp"
        android:layout_height="65dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/account_switcher_bg" />

    <ImageView
        android:layout_width="110dp"
        android:layout_height="65dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/phone_number" />

    <EditText
        android:layout_width="800dp"
        android:layout_height="65dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="380dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:hint="654-874-9596"
        android:id="@+id/phonenumber"
        android:inputType="phone"
        android:src="@drawable/verify_phone_number" />
    <ImageView
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="430dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/student_employee_number" />
    <EditText
        android:layout_width="3000dp"
        android:layout_height="80dp"
        android:layout_marginStart="45dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:hint="125364897"
        android:id="@+id/studentnumber"
        android:inputType="number"
        android:src="@drawable/number234567"/>

    <ImageView
        android:layout_width="466dp"
        android:layout_height="50dp"
        android:src="@drawable/sign_up" />

    <ImageButton
        android:layout_width="184dp"
        android:layout_height="320dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="90000000dp"
        android:layout_marginTop="-8dp"
        android:layout_marginEnd="287dp"
        android:layout_marginBottom="492dp"
        android:background="transparent"
        android:src="@drawable/dude" />

    <ImageButton
        android:layout_width="371dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="550dp"
        android:layout_marginEnd="19dp"
        android:layout_marginBottom="86dp"
        android:background="@color/white"
        android:src="@drawable/next" />


</RelativeLayout>

